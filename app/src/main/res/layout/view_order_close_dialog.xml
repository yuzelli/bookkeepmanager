<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
  >

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_cancel" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_close"
        android:layout_marginTop="10dp"
        android:background="@color/listview_line_bg" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_line"
        android:padding="10dp"
        android:textSize="@dimen/phone_content"
        android:textColor="@color/text_content_color"
        android:background="@color/title_bg"
        android:text="订单关闭的同时会把订单的支付金额退还给用户，现金和刷卡需要人工退款。" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tv_hint"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_cancel_shape"
            android:gravity="center"
            android:padding="5dp"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/phone_content" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_cancel"
            android:background="@drawable/bg_order_type_selected"
            android:gravity="center"
            android:padding="5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/phone_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phone_content"
        android:text="关闭订单"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/img_cancel"
        android:layout_alignParentLeft="true"
        android:textColor="@color/text_title_color"
        android:layout_alignParentStart="true" />
</RelativeLayout>