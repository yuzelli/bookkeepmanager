<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.example.yuzelli.bookkeepmananger.view.activity.SetTypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_head_title">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_zhichu"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#1196db"
                android:text="支出"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#000000"/>
            <TextView
                android:id="@+id/tv_shouru"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textColor="#1196db"
                android:gravity="center"
                android:textSize="15sp"
                android:background="#ffffff"
                android:text="收入"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:text="确定"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/grid_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_head"
        android:numColumns="4">

    </GridView>
</LinearLayout>
